{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420"
    },
    "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "copyright": "",
        "targets": "all",
        "externalBin": [],
        "icon": [
            "icons/icon.icns",
            "icons/icon.ico",
            "icons/icon.png",
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "nsis": {
                "installerIcon": "./icons/icon.ico"
            }
        },
        "longDescription": "",
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
        },
        "resources": [],
        "shortDescription": "",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "easy-viewer",
    "mainBinaryName": "easy-viewer",
    "identifier": "com.lsk.easyviewer",
    "plugins": {},
    "app": {
        "windows": [
            {
                "fullscreen": false,
                "title": "easyviewer",
                "center": true,
                "resizable": true,
                "decorations": true,
                "transparent": true,
                "height": 920,
                "width": 1300
            }
        ],
        "withGlobalTauri": false,
        "security": {
            "assetProtocol": {
                "scope": [
                    "**"
                ],
                "enable": true
            },
            "csp": null
        }
    }
}